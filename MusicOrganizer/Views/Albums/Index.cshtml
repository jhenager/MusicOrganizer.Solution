@using MusicOrganizer.Models;
<h1>Collection</h1>
@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Album album in Model)
  {
    <li><a href='/collections/@Model["collection"].Id/albums/@album.Id'>@album.AlbumName by @album.Artist</a></li>
  }
</ul>
<a href="/collections/{collectionId}/albums/new">Add a new album.</a>
<form action="/albums/delete" method="post">
  <button type="submit" name="button">Clear All Albums</button>
</form>