@using ToDoList.Models;

<h1>Collections</h1>

@if (@Model.Count == 0)
{
  <h3>No collections have been added yet!</h3>
} 

@foreach (Collection collection in Model)
{
  <h3><a href='/collections/@collection.Id'>@collection.Name</a></h3>
  
}

<p><a href='/'>Back home</a></p>

